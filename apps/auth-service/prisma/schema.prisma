generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String
  userId    Int
  expiresAt DateTime
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  password     String
  role         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  RefreshToken RefreshToken[]
}
